<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/backgroundnavigation"
            android:layout_weight=".1"
            android:weightSum="1">
            <ImageView
                android:src="@drawable/arrow"
                android:rotation="180"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight=".09"
                android:layout_height="40dp"
                android:id="@+id/arroow"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="Home"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp"
        android:background="@drawable/background3"
        android:layout_weight="1"
        android:weightSum="6">
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>
        <EditText
            android:background="@color/White"
            android:layout_width="match_parent"
         android:hint="   Name"
            android:textStyle="bold"
            android:textColorHint="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp" />
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"/>

        <LinearLayout

            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:layout_weight="2"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="   select Gender"
                android:autoSizeTextType="uniform"
                android:textColor="@android:color/black"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeMaxTextSize="25sp"/>

            <LinearLayout

                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:layout_weight="3"
                android:weightSum="2">
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:src="@drawable/male"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/female1"/>
            </LinearLayout>
            <LinearLayout

                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Male"
                    android:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    android:autoSizeMinTextSize="5sp"
                    android:textStyle="bold"
                    android:autoSizeMaxTextSize="25sp"/>
                <TextView
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Female"
                    android:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    android:autoSizeMinTextSize="5sp"
                    android:textStyle="bold"
                    android:autoSizeMaxTextSize="25sp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"/>
        <EditText
            android:background="@color/White"
            android:layout_width="match_parent"
            android:hint="   Email"
            android:textStyle="bold"
            android:textColorHint="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp" />
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"/>
        <EditText
            android:background="@color/White"
            android:layout_width="match_parent"
            android:hint="   Phone No"
            android:textStyle="bold"
            android:textColorHint="@android:color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="0dp"
android:id="@+id/saved"

android:background="@drawable/backgroundbtn2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:text="Save"
            android:clickable="true"

            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:layout_weight=".5" />
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="0dp"


            android:background="@drawable/backgroundbtn2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:text="Edit profile detail's"
            android:clickable="true"
                android:id="@+id/editprf"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="3sp"
            android:autoSizeTextType="uniform"
            android:layout_weight=".5" />
    </LinearLayout>

    </LinearLayout>

